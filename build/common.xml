    <target name="create.schema" description="excute create sql" depends="retrieve">
        <sql driver="${jdbc.mysql.driverClassName}" url="${jdbc.mysql.url}" userid="${jdbc.mysql.username}"
             password="${jdbc.mysql.password}" encoding="UTF-8" print="no" onerror="continue">
            <fileset dir="${database.create.dir}">
                <include name="*.sql"/>
            </fileset>
            <classpath>
                <path refid="compile.classpath"/>
            </classpath>
        </sql>
    </target>

    <target name="alter.schema" description="excute alter sql" depends="retrieve">
        <sql driver="${jdbc.mysql.driverClassName}" url="${jdbc.mysql.url}" userid="${jdbc.mysql.username}"
             password="${jdbc.mysql.password}" encoding="UTF-8" print="no" onerror="continue">
            <fileset dir="${database.alter.dir}">
                <include name="*.sql"/>
            </fileset>
            <classpath>
                <path refid="compile.classpath"/>
            </classpath>
        </sql>
    </target>

    <target name="insert.schema" description="excute insert sql" depends="retrieve">
        <sql driver="${jdbc.mysql.driverClassName}" url="${jdbc.mysql.url}" userid="${jdbc.mysql.username}"
             password="${jdbc.mysql.password}" encoding="UTF-8" print="no" onerror="continue">
            <fileset dir="${database.insert.dir}">
                <include name="*.sql"/>
            </fileset>
            <classpath>
                <path refid="compile.classpath"/>
            </classpath>
        </sql>
    </target>

    <target name="update.schema" description="excute update sql" depends="retrieve">
        <sql driver="${jdbc.mysql.driverClassName}" url="${jdbc.mysql.url}" userid="${jdbc.mysql.username}"
             password="${jdbc.mysql.password}" encoding="UTF-8" print="no" onerror="continue">
            <fileset dir="${database.update.dir}">
                <include name="*update.sql"/>
            </fileset>
            <classpath>
                <path refid="compile.classpath"/>
            </classpath>
        </sql>
    </target>

    <target name="initdb">
        <sequential>
            <antcall target="create.schema"/>
            <!--<antcall target="alter.schema" />-->
            <antcall target="insert.schema"/>
            <!--<antcall target="update.schema" />-->
        </sequential>
    </target>
</project>