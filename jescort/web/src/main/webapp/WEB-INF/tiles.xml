<tiles-definitions>

    <!-- Default Main Template -->
    <definition name=".layout" template="/decorators/layout.jsp">
        <put-attribute name="header" value="/decorators/header.jsp"/>
        <put-attribute name="content" value="${content}"/>
        <put-attribute name="footer" value="/decorators/footer.jsp"/>
    </definition>

    <definition name="auth.layout" template="/decorators/auth-layout.jsp">
